{
  "name": "fd-postman-cli",
  "version": "2.0.0",
  "description": "A powerful and efficient command-line interface (CLI) tool for API testing and interaction, inspired by Postman. Features workflows, request chaining, import/export, and history replay.",
  "main": "dist/index.js",
  "bin": {
    "fp": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "cli",
    "postman",
    "api",
    "testing",
    "http",
    "rest",
    "graphql",
    "terminal",
    "developer-tools",
    "api-client",
    "http-client",
    "workflow",
    "request-chaining",
    "api-automation",
    "curl-alternative"
  ],
  "author": "Alfayad (https://alfayad.vercel.app)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Alfayads/fd-postman-cli.git"
  },
  "bugs": {
    "url": "https://github.com/Alfayads/fd-postman-cli/issues"
  },
  "homepage": "https://github.com/Alfayads/fd-postman-cli#readme",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "axios": "^1.6.5",
    "chalk": "^4.1.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}

